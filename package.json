{
    "name": "magarrent/editorjs-undo",
    "version": "0.1.0",
    "description": "Undo/redo plugin for Editor.js with caret restoration and configurable shortcuts.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "default": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "webpack --mode production",
        "build-module": "tsup",
        "dev": "webpack --mode development --watch",
        "lint": "tsc --noEmit",
        "test": "vitest"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/magarrent/editorjs-undo"
    },
    "keywords": [
        "editorjs",
        "undo",
        "redo",
        "history",
        "docuwriter"
    ],
    "author": "DocuWriter.ai",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@editorjs/editorjs": "^2.29.1",
        "@types/node": "^22.7.4",
        "babel-loader": "^9.2.1",
        "tsup": "^8.1.0",
        "typescript": "^5.6.3",
        "vitest": "^1.6.0",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4"
    }
}